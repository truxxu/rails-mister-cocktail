<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "background.jpg" %>);">
  <div class="banner-content">
    <%= image_tag "cocktail.svg", id: "logo" %>
    <h1>Tropical  Cocktails</h1>
  </div>
</div>

<div class="drinks-list">
  <h2 class="text-center">Would you like to have a drink?</h2>
  <h3 class="text-center">Our selection of cocktails</h3>
  <%= link_to 'Create a new cocktail', new_cocktail_path, class: "btn btn-primary btn-lg"  %>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <%= render 'components/card', input: cocktail %>
      <% end %>
    </div>
  </div>
</div>
