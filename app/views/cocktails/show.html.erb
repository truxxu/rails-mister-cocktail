<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-md-6">
      <%= cl_image_tag @cocktail.photo, class: "cocktail-pic"%>
    </div>
    <div class="col-md-6">
      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <i class="fas fa-glass-martini"></i> <%= dose.ingredient.name %> ( <%= dose.description %> )
          <%= link_to " ", dose_path(dose), method: :delete, class: "fas fa-times" %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Add an ingredient</h2>
      <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
    </div>
  </div>

<!--   <div class="form-medium">
  </div> -->
  <p><%= link_to 'Go back', cocktails_path %></p>
</div>
